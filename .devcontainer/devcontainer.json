{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye", // Sticking to 3.11
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "calculate_pbn_results_streamlit.py"
      ]
    },
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python" // Ensure Pylance uses the default container Python
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  // Use a postCreateCommand to install dependencies from requirements.txt
  // This runs AFTER the container is created and ready.
  "postCreateCommand": "[ -f requirements.txt ] && pip install -r requirements.txt; echo 'âœ… Dependencies installed'",
  // The updateContentCommand can be simpler or removed if postCreateCommand handles installs
  // If you have apt packages, keep this. If not, remove the apt parts.
  "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y <packages.txt",

  "postAttachCommand": {
    "server": "streamlit run calculate_pbn_results_streamlit.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}
